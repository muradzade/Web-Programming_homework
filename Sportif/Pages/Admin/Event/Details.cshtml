@page
@model Sportif.Pages.Admin.Event.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Etkinlik Detayı</h2>
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    Başlık
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Event.Header)
                                </dd>
                                <dt class="col-sm-2">
                                    Açıklama
                                </dt>
                                <dd class="col-sm-10">
                                    <textarea readonly rows="9">
                                        @Html.DisplayFor(model => model.Event.Description)
                                    </textarea>
                                </dd>
                                <dt class="col-sm-2">
                                    İçerik
                                </dt>
                                <dd class="col-sm-10">
                                    <textarea readonly rows="9">
                                        @Html.DisplayFor(model => model.Event.Content)
                                    </textarea>
                                </dd>
                                <dt class="col-sm-2">
                                    Tarih
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Event.Date)
                                </dd>
                                <dt class="col-sm-2">
                                    Resim
                                </dt>
                                <dd class="col-sm-10">
                                    <img width="50" height="50" src="~/img/@Model.Event.ImagePath" />
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Event.ID">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
