@page
@model Sportif.Pages.Admin.News.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>News</h4>
<hr />


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Haber Düzenle</h2>
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="News.ID" />
                                <div class="form-group">
                                    <label asp-for="News.Header" class="control-label"></label>
                                    <input asp-for="News.Header" class="form-control" />
                                    <span asp-validation-for="News.Header" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="News.Description" class="control-label"></label>
                                    <textarea asp-for="News.Description" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="News.Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="News.Content" class="control-label"></label>
                                    <textarea asp-for="News.Content" class="form-control" rows="9"></textarea>
                                    <span asp-validation-for="News.Content" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="News.ImagePath" class="control-label"></label>
                                    <input asp-for="News.ImagePath" type="file" class="form-control" />
                                    <span asp-validation-for="News.ImagePath" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>