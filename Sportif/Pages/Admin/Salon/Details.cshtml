@page
@model Sportif.Pages.Admin.Salon.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Salon Detayı</h2>
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Salon.Header)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Salon.Header)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Salon.Description)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Salon.Description)
                                </dd>
                                <dt class="col-sm-2">
                                    Üye sayısı
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Salon.ApplicationUsers.Count)
                                </dd>
                                <dt class="col-sm-2">
                                    Resim
                                </dt>
                                <dd class="col-sm-10">
                                    <img height="50" width="50" src="~/img/@Model.Salon.Image" />
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Salon.ID">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>