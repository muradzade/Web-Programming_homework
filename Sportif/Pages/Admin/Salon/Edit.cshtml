@page
@model Sportif.Pages.Admin.Salon.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Salon</h4>
<hr />

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <form method="post" class="form-horizontal">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Salon.ID" />
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label asp-for="Salon.Header" class="form-control-label">Başlık</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <input asp-for="Salon.Header" class="form-control">
                                        <small class="form-text text-muted"><span asp-validation-for="Salon.Header" class="text-danger"></span></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label asp-for="Salon.Description" class="form-control-label">Açıklama</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea asp-for="Salon.Description" rows="9" class="form-control"></textarea>
                                        <small class="form-text text-muted"><span asp-validation-for="Salon.Description" class="text-danger"></span></small>
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label asp-for="Salon.Address" class="form-control-label">Adres</label>
                                    </div>
                                    <div class="col-12 col-md-9">
                                        <textarea asp-for="Salon.Address" rows="2" class="form-control"></textarea>
                                        <small class="form-text text-muted"><span asp-validation-for="Salon.Address" class="text-danger"></span></small>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-sm">
                                        <i class="fa fa-dot-circle-o"></i> Save
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>