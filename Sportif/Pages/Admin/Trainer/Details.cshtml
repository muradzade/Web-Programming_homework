@page
@model Sportif.Pages.Admin.Trainer.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Trainer</h4>
    <hr />
    
</div>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Antrenör Detayı</h2>
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.Name)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Trainer.Name)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.Surname)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Trainer.Surname)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.Biography)
                                </dt>
                                <dd class="col-sm-10">
                                    <textarea readonly rows="9">
                                        @Html.DisplayFor(model => model.Trainer.Biography)
                                    </textarea>
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.Contacts)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Trainer.Contacts)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.DateOfBirth)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Trainer.DateOfBirth)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Trainer.Salon)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Trainer.Salon.Header)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Trainer.ID">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>