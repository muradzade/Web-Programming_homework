@page
@model Sportif.Pages.Admin.Trainer.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Antrenörler</h2><br />
            <a class="btn btn-primary" asp-page="./Create">Ekle</a>
            <div class="row">
                <div class="col-12 col-md-12">
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>
                                        Ad
                                    </th>
                                    <th>
                                        Soyad
                                    </th>
                                    <th>
                                        Biyografi
                                    </th>
                                    <th>
                                        Doğum Tarihi
                                    </th>
                                    <th>
                                        Salon
                                    </th>
                                    <th>
                                        İletişim
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Trainer)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Surname)
                                        </td>
                                        <td>
                                            <textarea readonly asp-for="@item.Biography" rows="2">
                                                @Html.DisplayFor(modelItem => item.Biography)
                                        </textarea>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DateOfBirth)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Salon.Header)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Contacts)
                                        </td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@item.ID"><i class="fas fa-edit"></i> Edit</a> |
                                            <a asp-page="./Details" asp-route-id="@item.ID"><i class="fas fa-list-ul"></i> Details</a> |
                                            <a asp-page="./Delete" asp-route-id="@item.ID"><i class="fas fa-trash-alt"></i> Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
