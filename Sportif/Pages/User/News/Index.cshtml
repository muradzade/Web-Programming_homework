@page
@model Sportif.Pages.User.News.IndexModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <h2>Etkinlik Detayı</h2>
            <div class="row">
                <div class="col-lg-10 col-md-4">
                    <div class="card">
                        <div class="card-body card-block">
                            <img width="300" height="250" src="~/img/@Model.News.ImagePath" />
                            <dl class="row">

                                <dt class="col-sm-2">
                                    Başlık
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.News.Header
                                </dd>
                                <dt class="col-sm-2">
                                    Açıklama
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.News.Description
                                </dd>
                                <dt class="col-sm-2">
                                    İçerik
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.News.Content
                                </dd>
                                <dt class="col-sm-2">
                                    Tarih
                                </dt>
                                <dd class="col-sm-10">
                                    @Model.News.Content
                                </dd>

                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
